@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<center><h2>Registration</h2></center>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Job Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .container {
            padding-top: 50px;
            padding-bottom: 40px;
        }

        .form-contact {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <form asp-controller="Home" asp-action="Register" method="post">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-12 pb-3">
                        <label id="lblMsg" style="color: red; display: none;"></label>
                    </div>
                    <div class="col-12 text-center">
                        <h2 class="contact-title">Sign Up</h2>
                    </div>
                    <div class="col-lg-6 mx-auto">
                        <div class="form-contact">
                            <div class="row">
                                <div class="col-12">
                                    <h6>Login Information</h6>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input asp-for="Username" class="form-control" placeholder="Enter Your Username" required>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter Your Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Your Password" required>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <h6>Personal Information</h6>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Full Name</label>
                                        <input asp-for="Fullname" class="form-control" placeholder="Enter Your Full Name" required>
                                        <span asp-validation-for="Fullname" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <textarea asp-for="Address" class="form-control" placeholder="Enter Your Address" required></textarea>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Mobile Number</label>
                                        <input asp-for="MobileNumber" class="form-control" placeholder="Enter Your Mobile Number" required>
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter Your Email" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Country</label>
                                        <select asp-for="Country" class="form-control">
                                            <option value="">Select Country</option>
                                            <option value="India">India</option>
                                            <option value="USA">USA</option>
                                            <option value="UK">UK</option>
                                            <option value="Canada">Canada</option>
                                        </select>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Role</label>
                                        <select asp-for="Role" class="form-control">
                                            <option value="">Select Role</option>
                                            <option value="User">User</option>
                                        </select>
                                        <span asp-validation-for="Role" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">Register</button>
                                <a asp-controller="Home" asp-action="Login" class="ms-2">Already Register? Click Here...</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    @if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
            window.location.href = "@Url.Action("Index", "Home")";
        </script>
    }
</body>
</html>


