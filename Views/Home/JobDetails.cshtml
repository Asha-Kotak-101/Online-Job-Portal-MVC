@model Online_Job_Portal_MVC.Models.AddJobModel

<h2>@Model.Title</h2>
<p><strong>Company:</strong> @Model.CompanyName</p>
<p><strong>Location:</strong> @Model.Country</p>
<p><strong>Job Type:</strong> @Model.JobType</p>
<p><strong>Salary:</strong> @Model.Salary</p>
<p><strong>Last Date:</strong> @Model.LastDateToApply</p>
<p><strong>Description:</strong> @Model.Description</p>

<form asp-action="ApplyForJob" method="post">
    <input type="hidden" name="JobId" value="@Model.JobId" />
    <button type="submit" class="btn btn-success">Apply Now</button>
</form>