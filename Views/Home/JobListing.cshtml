 @model List<Online_Job_Portal_MVC.Models.AddJobModel>
@{
    ViewData["Title"] = "JobListing";
}

<h2 class="text-center">Available Jobs (Total: @ViewBag.TotalJobs)</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Job Type</th>
            <th>Salary</th>
            <th>Last Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.CompanyName</td>
                <td>@job.Country</td>
                <td>@job.JobType</td>
                <td>@job.Salary</td>
                <td>@job.LastDateToApply</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("JobDetails", "Home", new { id = job.JobId })">View & Apply</a>
                </td>
            </tr>
        }
    </tbody>
</table>
