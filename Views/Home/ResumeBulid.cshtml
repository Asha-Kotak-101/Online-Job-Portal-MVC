@model ResumeModel
@{
    ViewData["Title"] = "ResumeBulid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <h1>ResumeBulid</h1>
    <h2>Here You Can Edit Your Details and Upload Your Resume</h2>
</center>
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Bulid - Job Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <form asp-controller="Home" asp-action="ResumeBulid" method="post" enctype="multipart/form-data">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-12 pb-3">
                        <label id="lblMsg" style="color: red; display: none;"></label>
                    </div>
               
                    <div class="col-lg-6 mx-auto">
                        <div class="form-contact">
                            <div class="row">
                                <div class="col-12">
                                    <h6>Build Your Resume</h6>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Fullname</label>
                                        <input asp-for="Fullname" class="form-control" placeholder="Enter Your Fullname" required>
                                        <span asp-validation-for="Fullname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Username</label>
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Enter Your Username" required>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input asp-for="Address" type="text" class="form-control" placeholder="Your Address" required>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Moblie Number</label>
                                        <input asp-for="MoblieNumber" type="text" class="form-control" placeholder="Your Moblie Number" required>
                                        <span asp-validation-for="MoblieNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input asp-for="Email" type="text" class="form-control" placeholder="Your Email" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Country</label>
                                        <select asp-for="Country" class="form-control">
                                            <option value="">Select Country</option>
                                            <option value="India">India</option>
                                            <option value="USA">USA</option>
                                            <option value="UK">UK</option>
                                            <option value="Canada">Canada</option>
                                        </select>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <h6>Educational Information</h6>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>10th Percentage</label>
                                        <input asp-for="TenPercentage" class="form-control" placeholder="Enter Your 10th Percentage" required>
                                        <span asp-validation-for="TenPercentage" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>12th Percentage </label>
                                        <input asp-for="TWPercentage" class="form-control" placeholder="Enter Your 12th Percentage" required>
                                        <span asp-validation-for="TWPercentage" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Graduation Grade</label>
                                        <input asp-for="GraduationGrade" class="form-control" placeholder="Enter Your Graduation Grade" required>
                                        <span asp-validation-for="GraduationGrade" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Post-Graduation Grade</label>
                                        <input asp-for="PostGraduationGrade" type="text" class="form-control" placeholder="Enter Your Post-Graduation Grade" required>
                                        <span asp-validation-for="PostGraduationGrade" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>PHD Grade</label>
                                        <input asp-for="PHDGrade" type="text" class="form-control" placeholder="Enter Your PHD Grade" required>
                                        <span asp-validation-for="PHDGrade" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Job Profile/Works On</label>
                                        <input asp-for="JobProfile" type="text" class="form-control" placeholder="Enter Your Job Profile" required>
                                        <span asp-validation-for="JobProfile" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Works Experience</label>
                                        <input asp-for="WorksExperience" type="text" class="form-control" placeholder="Enter Your Works Experience" required>
                                        <span asp-validation-for="WorksExperience" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="UploadResume">Upload Resume</label>
                                   @*  <input asp-for="UploadResume" type="file" class="form-control">
                                    <span asp-validation-for="UploadResume" class="text-danger"></span> *@
                                    <input asp-for="UploadResumeFile" type="file" class="form-control">

                                </div>

                            </div>
                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>


    @if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
            window.location.href = "@Url.Action("UserProflie", "Home")";
        </script>
    }
</body>
</html>
