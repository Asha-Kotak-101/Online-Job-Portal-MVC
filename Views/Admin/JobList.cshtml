
@{
    ViewData["Title"] = "JobList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>JobList</h1>
<div style="background-image: url('/Images/bg.jpg'); width: 100%; height: 720px; background-repeat: no-repeat; background-size: cover; background-attachment: fixed;">
    <div class="container container-fluid pt-4 pb-4">

        <div class="btn-toolbar justify-content-between mb-3">
            <div class="btn-group">
                <span class="text-success">@ViewBag.Message</span>
            </div>
            <div class="input-group h-25">
                <a asp-controller="Admin" asp-action="ViewResume" class="btn btn-secondary" style="display: none;"> &lt; Back</a>
            </div>
        </div>

        <h3 class="text-center">Job List/Details</h3>

        <div class="row mb-3 pt-sm-3">
            <div class="col-md-12">
                <table class="table table-hover table-bordered">
                    <thead class="bg-primary text-white">
                        <tr class="text-center">
                            <th>Sr. No</th>
                            <th>Job Title</th>
                            <th>No. Of Post</th>
                            <th>Qualification</th>
                            <th>Experience</th>
                            <th>Valid Till</th>
                            <th>Company</th>
                            <th>Country</th>
                            <th>State</th>
                            <th>Posted Date</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="text-center">
                            <td>1</td>
                            <td>Software Developer</td>
                            <td>5</td>
                            <td>B.Tech (IT)</td>
                            <td>2 Years</td>
                            <td>10 March 2025</td>
                            <td>ABC Tech</td>
                            <td>India</td>
                            <td>Gujarat</td>
                            <td>01 March 2025</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-primary">
                                    <img src="/assets/img/icon/editIcon1.jpg" width="30px" height="30px" />
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-danger">
                                    <img src="/assets/img/icon/trashIcon.jpg" width="30px" height="30px" />
                                </button>
                            </td>
                        </tr>
                        <tr class="text-center">
                            <td>2</td>
                            <td>Data Analyst</td>
                            <td>3</td>
                            <td>M.Sc (Data Science)</td>
                            <td>1 Year</td>
                            <td>15 April 2025</td>
                            <td>XYZ Analytics</td>
                            <td>USA</td>
                            <td>California</td>
                            <td>05 March 2025</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-primary">
                                    <img src="/assets/img/icon/editIcon1.jpg" width="30px" height="30px" />
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-danger">
                                    <img src="/assets/img/icon/trashIcon.jpg" width="30px" height="30px" />
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p class="text-center text-muted">No Record To Display...!!</p>
            </div>
        </div>
    </div>
</div>

