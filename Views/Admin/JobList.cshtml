  @model List<Online_Job_Portal_MVC.Models.AddJobModel>

<h2>Job List</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>No Of Posts</th>
            <th>Qualification</th>
            <th>Experience</th>
            <th>Last Date To Apply/Valid Till</th>
            <th>Company Name</th>
            <th>Country</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.NoOfPost</td>
                <td>@job.Qualification</td>
                <td>@job.Experience</td>
                <td>@job.LastDateToApply</td>
                <td>@job.CompanyName</td>
                <td>@job.Country</td>
                <td>@job.State</td>
                <td>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <div class="form-group mt-3">
        <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-link">BACK</a>
    </div>
</table>
