

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-center mt-3">Admin Dashboard</h2>
<p class="text-center">Welcome to the admin area!</p>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="AdminDashboard"><i class="fas fa-palette"></i> Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="NewJob"><i class="fas fa-plus-square"></i> New Job</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="JobList"><i class="fas fa-file-alt"></i> Job List</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="ViewResume"><i class="fas fa-file-download"></i> View Resume</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="UserList"><i class="fas fa-users"></i> User List</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="Admin" asp-action="ContactList"><i class="fas fa-comment-alt"></i> Contact List</a></li>
                   

                   

                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card shadow-sm bg-gradient text-white text-center" style="background-color: #ff4757;">
                        <div class="card-body">
                            <h5>Total Users</h5>
                            <h2>@Model.TotalUsers</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm bg-gradient text-white text-center" style="background-color: #3742fa;">
                        <div class="card-body">
                            <h5>Total Jobs</h5>
                            <h2>@Model.TotalJobs</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm bg-gradient text-white text-center" style="background-color: #2ed573;">
                        <div class="card-body">
                            <h5>Total Applied Jobs</h5>
                            <h2>@Model.TotalAppliedJobs</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow-sm bg-gradient text-white text-center" style="background-color: #ffa502;">
                        <div class="card-body">
                            <h5>Contacted Users</h5>
                            <h2>@Model.ContactedUsers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        console.log("Admin Dashboard loaded successfully!");
    </script>
}
