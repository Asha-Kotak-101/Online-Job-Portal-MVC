
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ContactList</h1>
<div style="background-image: url('/Images/bg.jpg'); width: 100%; height: 720px; background-repeat: no-repeat; background-size: cover; background-attachment: fixed;">
    <div class="container container-fluid pt-4 pb-4">

        <h3 class="text-center">Contact List/Details</h3>

        <div class="row mb-3 pt-sm-3">
            <div class="col-md-12">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var contacts = new List<dynamic>
                        {
                        new { Id = 1, Name = "Alice", Email = "alice@example.com", Subject = "Inquiry", Message = "Need more details" },
                        new { Id = 2, Name = "Bob", Email = "bob@example.com", Subject = "Support", Message = "Issue with login" },
                        new { Id = 3, Name = "Charlie", Email = "charlie@example.com", Subject = "Feedback", Message = "Great website!" }
                        };

                            int count = 1;
                        }

                        @if (!contacts.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center">No Record To Display...!!</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var contact in contacts)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@contact.Name</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.Subject</td>
                                    <td>@contact.Message</td>
                                    <td class="text-center">
                                        <a href="#" class="btn btn-danger">
                                            <img src="~/assets/img/icon/trashIcon.jpg" width="40px" height="40px" />
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
