@model List<Online_Job_Portal_MVC.Models.UserListModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserList</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Mobile No.</th>
            <th>Country</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GetUser.Username</td>
                <td>@item.GetUser.Email</td>
                <td>@item.GetUser.MobileNumber</td>
                <td>@item.GetUser.Country</td>
                <td>
                    <form asp-action="DeleteUser" asp-controller="Admin" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="email" value="@item.GetUser.Email" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group mt-3">
    <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-link">BACK</a>
</div>
